//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
float4 VS( float4 Pos : POSITION ) : SV_POSITION
{
    return Pos;
}


//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 PS( float4 Pos : SV_POSITION ) : SV_Target
{
	float x = Pos.x;
	[branch]
	for(int i = 0; i < 100; ++i)
	{
		x = sin(x + i * 0.2);
	}
    return float4( x, 1.0f, 0.0f, 1.0f );    // Yellow, with Alpha = 1
}
